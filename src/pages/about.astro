---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const astro = "Astro";
const updateColor = "navy"
const fontWeight = 100;
const textTransform = "uppercase";
---

<!doctype html>
<html lang="en">
	<style define:vars={{updateColor, fontWeight, textTransform}}>
		h1 {
		  color: purple;
		  font-size: 4rem;
		}
		.update {
			color: var(--updateColor);
			font-weight: var(--fontWeight);
			text-transform: var(--textTransform);
		}
	</style>
	<head>
		<BaseHead title="About Me" description="About me page" />
	</head>
	<body>
		<Header title={SITE_TITLE}/>
		<main>
			<h1>About me</h1>
			<p>
				I am working with {astro} to see if it is easy to have a personal blog.
			</p>
			<p class="update">
				I'm not sure I'll update this site later :)
			</p>
		</main>
		<Footer />
	</body>
</html>
